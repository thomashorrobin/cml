<UserControl x:Class="cml.StringCMLControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cml"
             mc:Ignorable="d" 
             d:DesignHeight="42" d:DesignWidth="255">
    <Grid>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="105" Height="22" FontSize="10"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="22" Margin="120,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="125" TextChanged="textBox_TextChanged"/>

    </Grid>
</UserControl>
